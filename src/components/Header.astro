---
import { Icon } from 'astro-icon/components';

// Navigation removed - focusing on lead capture form in hero
---

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-1 group">
        <!-- Custom Fence Icon -->
        <div class="relative">
          <svg 
            viewBox="0 0 32 32" 
            class="h-7 w-7 text-blue-600 transition-transform group-hover:scale-110"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <!-- Fence Posts -->
            <rect x="4" y="8" width="4" height="16" rx="1" fill="currentColor" fill-opacity="0.2"/>
            <rect x="12" y="6" width="4" height="18" rx="1" fill="currentColor" fill-opacity="0.2"/>
            <rect x="20" y="8" width="4" height="16" rx="1" fill="currentColor" fill-opacity="0.2"/>
            <!-- Horizontal Rails -->
            <line x1="2" y1="12" x2="26" y2="12"/>
            <line x1="2" y1="20" x2="26" y2="20"/>
            <!-- Post Tops -->
            <path d="M4 8L6 5L8 8"/>
            <path d="M12 6L14 3L16 6"/>
            <path d="M20 8L22 5L24 8"/>
          </svg>
        </div>
        <!-- Styled Logo Text -->
        <span class="text-lg font-black tracking-tight">
          <span class="bg-gradient-to-r from-slate-800 to-slate-600 bg-clip-text text-transparent">Bucks</span>
          <span class="bg-gradient-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent">County</span>
          <span class="bg-gradient-to-r from-slate-700 to-slate-500 bg-clip-text text-transparent">Fence</span>
        </span>
      </a>

      <!-- CTA Button -->
      <a
        href="#contact"
        class="inline-flex items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-blue-700"
      >
        Get a Quote
      </a>
    </div>
  </div>
</header>

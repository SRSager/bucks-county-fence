---
import { Icon } from 'astro-icon/components';

// Navigation removed - focusing on lead capture form in hero
---

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-1.5 group">
        <!-- Custom Fence Icon -->
        <svg 
          viewBox="0 0 32 32" 
          class="h-9 w-9 transition-transform group-hover:scale-110"
        >
          <!-- Blue background square -->
          <rect width="32" height="32" rx="4" fill="#2563eb"/>
          <!-- White fence icon inside -->
          <path d="M7 10L9 7L11 10V23H7V10Z" fill="white"/>
          <path d="M14 10L16 7L18 10V23H14V10Z" fill="white"/>
          <path d="M21 10L23 7L25 10V23H21V10Z" fill="white"/>
          <!-- Horizontal Rails -->
          <rect x="6" y="14" width="20" height="2" rx="0.5" fill="white"/>
          <rect x="6" y="20" width="20" height="2" rx="0.5" fill="white"/>
        </svg>
        <!-- Styled Logo Text -->
        <span class="text-lg font-black tracking-tight">
          <span class="bg-gradient-to-r from-slate-800 to-slate-600 bg-clip-text text-transparent">Bucks</span>
          <span class="bg-gradient-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent">County</span>
          <span class="bg-gradient-to-r from-slate-700 to-slate-500 bg-clip-text text-transparent">Fence</span>
        </span>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        <a href="/services" class="text-sm font-medium hover:text-primary">Services</a>
        <a href="/gallery" class="text-sm font-medium hover:text-primary">Gallery</a>
        <a href="/blog" class="text-sm font-medium hover:text-primary">Blog</a>
        <a href="/about" class="text-sm font-medium hover:text-primary">About</a>
        <a href="/contact" class="text-sm font-medium hover:text-primary">Contact</a>
      </nav>

      <!-- CTA Button -->
      <a
        href="#contact"
        class="inline-flex items-center justify-center rounded-md bg-amber-500 px-4 py-2 text-sm font-medium text-white shadow hover:bg-amber-600"
      >
        Get a Quote
      </a>
    </div>
  </div>
</header>

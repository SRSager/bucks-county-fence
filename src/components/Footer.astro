---
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { label: 'Wood Fences', href: '/services/wood-fences' },
    { label: 'Vinyl Fences', href: '/services/vinyl-fences' },
    { label: 'Aluminum Fences', href: '/services/aluminum-fences' },
    { label: 'Chain Link', href: '/services/chain-link' },
  ],
  company: [
    { label: 'About Us', href: '/about' },
    { label: 'Gallery', href: '/gallery' },
    { label: 'Testimonials', href: '/testimonials' },
    { label: 'Contact', href: '/contact' },
  ],
  contact: {
    phone: '(215) 555-FENCE',
    email: 'info@buckscountyfence.com',
    address: '123 Main Street, Doylestown, PA 18901',
  },
};

const socialLinks = [
  { name: 'facebook', href: 'https://facebook.com', icon: 'mdi:facebook' },
  { name: 'instagram', href: 'https://instagram.com', icon: 'mdi:instagram' },
  { name: 'yelp', href: 'https://yelp.com', icon: 'mdi:yelp' },
];
---

<footer class="border-t bg-muted">
  <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Brand -->
      <div class="space-y-4">
        <a href="/" class="flex items-center gap-1 group">
          <!-- Custom Fence Icon -->
          <div class="relative">
            <svg 
              viewBox="0 0 32 32" 
              class="h-7 w-7 text-blue-600 transition-transform group-hover:scale-110"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <!-- Fence Posts -->
              <rect x="4" y="8" width="4" height="16" rx="1" fill="currentColor" fill-opacity="0.2"/>
              <rect x="12" y="6" width="4" height="18" rx="1" fill="currentColor" fill-opacity="0.2"/>
              <rect x="20" y="8" width="4" height="16" rx="1" fill="currentColor" fill-opacity="0.2"/>
              <!-- Horizontal Rails -->
              <line x1="2" y1="12" x2="26" y2="12"/>
              <line x1="2" y1="20" x2="26" y2="20"/>
              <!-- Post Tops -->
              <path d="M4 8L6 5L8 8"/>
              <path d="M12 6L14 3L16 6"/>
              <path d="M20 8L22 5L24 8"/>
            </svg>
          </div>
          <!-- Styled Logo Text -->
          <span class="text-lg font-black tracking-tight">
            <span class="bg-gradient-to-r from-slate-800 to-slate-600 bg-clip-text text-transparent">Bucks</span>
            <span class="bg-gradient-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent">County</span>
            <span class="bg-gradient-to-r from-slate-700 to-slate-500 bg-clip-text text-transparent">Fence</span>
          </span>
        </a>
        <p class="text-sm text-muted-foreground">
          Quality fencing solutions for Bucks County homeowners and businesses since 1995.
        </p>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-primary transition-colors"
              aria-label={social.name}
            >
              <Icon name={social.icon} class="h-5 w-5" />
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">Services</h3>
        <ul class="space-y-2">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-primary transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-primary transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

    </div>

    <div class="mt-12 pt-8 border-t">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-muted-foreground">
          Â© {currentYear} Bucks County Fence. All rights reserved.
        </p>
        <div class="flex gap-6">
          <a href="/privacy" class="text-sm text-muted-foreground hover:text-primary">Privacy Policy</a>
          <a href="/terms" class="text-sm text-muted-foreground hover:text-primary">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>

---
import { Icon } from 'astro-icon/components';
import LeadCaptureForm from './LeadCaptureForm.svelte';
---

<section class="relative min-h-[600px] flex items-center justify-center overflow-hidden">
  <!-- Gradient Background -->
  <div class="absolute inset-0 z-0 bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800">
    <!-- Subtle Pattern Overlay -->
    <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 py-12 lg:py-16">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start max-w-6xl mx-auto">
      
      <!-- Left Column: Text Content -->
      <div class="text-center lg:text-left">
        <!-- Main Headline -->
        <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight text-white">
          Find Trusted Fence Companies in Bucks County
        </h1>
        
        <!-- Subheadline -->
        <p class="text-xl mb-8 text-gray-300 max-w-xl">
          Connect with licensed fence installers serving your area. Wood, vinyl, aluminum, and chain-link fencing professionals.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 mb-8">
          <a 
            href="#locations" 
            class="inline-flex items-center gap-2 px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg transition-all hover:scale-105"
          >
            <Icon name="lucide:search" class="w-5 h-5" />
            Find by Location
          </a>
          <a 
            href="#featured" 
            class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-lg border border-white/20 transition-all backdrop-blur-sm"
          >
            <Icon name="lucide:award" class="w-5 h-5" />
            View Featured
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 text-white/80">
          <div class="flex items-center gap-2">
            <Icon name="lucide:shield-check" class="w-5 h-5 text-blue-400" />
            <span class="text-sm">Licensed & Insured</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="lucide:users" class="w-5 h-5 text-blue-400" />
            <span class="text-sm">Verified</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="lucide:map" class="w-5 h-5 text-blue-400" />
            <span class="text-sm">Bucks County</span>
          </div>
        </div>
      </div>
      
      <!-- Right Column: Lead Capture Form -->
      <div class="lg:pt-4">
        <LeadCaptureForm client:load />
      </div>
      
    </div>
  </div>

</section>

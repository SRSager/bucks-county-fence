---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | Bucks County Fence" description="Latest news and updates from Bucks County Fence">
	<div class="container mx-auto px-4 py-12">
		<h1 class="text-4xl font-bold mb-8">Blog</h1>
		
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
			{posts.map((post) => (
				<article class="bg-white rounded-lg shadow-md overflow-hidden">
					{post.data.image && (
						<img 
							src={post.data.image} 
							alt={post.data.title}
							class="w-full h-48 object-cover"
						/>
					)}
					<div class="p-6">
						<div class="text-sm text-gray-500 mb-2">
							{post.data.pubDate.toLocaleDateString('en-US', {
								year: 'numeric',
								month: 'long',
								day: 'numeric'
							})}
						</div>
						<h2 class="text-xl font-bold mb-2">
							<a href={`/blog/${post.id}`} class="hover:text-primary">
								{post.data.title}
							</a>
						</h2>
						<p class="text-gray-600 mb-4">{post.data.description}</p>
						<a href={`/blog/${post.id}`} class="text-primary font-medium hover:underline">
							Read more â†’
						</a>
					</div>
				</article>
			))}
		</div>
		
		{posts.length === 0 && (
			<p class="text-gray-600">No blog posts yet. Check back soon!</p>
		)}
	</div>
</Layout>

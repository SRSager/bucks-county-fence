  <style>
    .admin-nav {
      background: #1a1a1a;
      padding: 1rem;
      display: flex;
      gap: 1rem;
      align-items: center;
    }
    .admin-nav a {
      color: white;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      transition: background 0.2s;
    }
    .admin-nav a:hover {
      background: #333;
    }
    .admin-nav .active {
      background: #007acc;
    }
    .admin-nav h1 {
      color: white;
      margin: 0;
      margin-right: auto;
      font-size: 1.2rem;
    }
  </style>
</head>
<body>
  <nav class="admin-nav">
